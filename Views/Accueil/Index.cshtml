@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BoutiqueEnLigne.Models.Product>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Accueil";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Bienvenue sur notre boutique en ligne</h1>
            <p class="lead">Découvrez notre sélection de produits de qualité</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2>Nos produits</h2>
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    Aucun produit n'est disponible pour le moment.
                </div>
            }
            else
            {
                <p class="text-muted">@ViewBag.TotalProducts produits disponibles</p>
            }
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var produit in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@produit.Image" class="card-img-top" alt="@produit.Nom" style="height: 200px; object-fit: contain;">
                    <div class="card-body">
                        <h5 class="card-title">@produit.Nom</h5>
                        <p class="card-text">@produit.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">@produit.Prix.ToString("C")</span>
                            @if (produit.PourcentageReduction > 0)
                            {
                                <span class="badge bg-danger">-@produit.PourcentageReduction%</span>
                            }
                        </div>
                        <div class="mt-3">
                            <a asp-controller="Accueil" asp-action="Details" asp-route-id="@produit.ProduitId" class="btn btn-primary">
                                <i class="bi bi-info-circle me-2"></i>Détails
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Navigation des pages">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Précédent</a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-12">
            <h2>À propos de nous</h2>
            <p>Notre boutique en ligne vous propose une sélection de produits de qualité à des prix compétitifs. Nous nous engageons à vous offrir une expérience d'achat exceptionnelle avec un service client réactif et une livraison rapide.</p>
        </div>
    </div>
</div>

