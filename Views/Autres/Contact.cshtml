@{
    Layout = "_Layout";
    ViewBag.Title = "Contact";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="row mb-5">
        <div class="col-md-8 mx-auto text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">Contactez-nous</h1>
            <p class="lead text-muted">Nous sommes là pour répondre à toutes vos questions</p>
        </div>
    </div>

    <div class="row">
        <!-- Informations de contact -->
        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h2 class="h4 mb-4">Informations de contact</h2>
                    
                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="bi bi-geo-alt-fill text-primary fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="h6 mb-1">Adresse</h3>
                            <p class="text-muted mb-0">1595, boulevard Alphonse-Desjardins<br>Lévis (Québec) G6V 0A6</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="bi bi-telephone-fill text-primary fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="h6 mb-1">Téléphone</h3>
                            <p class="text-muted mb-0">+1 418 333-3333</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="bi bi-envelope-fill text-primary fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="h6 mb-1">Email</h3>
                            <p class="text-muted mb-0">contact@boutiqueenligne.com</p>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="bi bi-clock-fill text-primary fs-4"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="h6 mb-1">Horaires d'ouverture</h3>
                            <p class="text-muted mb-0">
                                Lundi - Vendredi: 8h00 - 18h00<br>
                                Samedi: 8h00 - 17h00<br>
                                Dimanche: Fermé (sauf pour les événements exceptionnels)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulaire de contact -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h2 class="h4 mb-4">Envoyez-nous un message</h2>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="nom" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="nom" required>
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <div class="col-12">
                                <label for="sujet" class="form-label">Sujet</label>
                                <input type="text" class="form-control" id="sujet" required>
                            </div>
                            <div class="col-12">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="5" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send me-2"></i>Envoyer le message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Carte -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="ratio ratio-21x9">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2781.827456789012!2d-71.17777777654321!3d46.79999999999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4cb7b2c1c1c1c1c1%3A0x1c1c1c1c1c1c1c1c!2sUniversit%C3%A9%20du%20Qu%C3%A9bec%20%C3%A0%20Rimouski%20-%20Campus%20de%20L%C3%A9vis!5e0!3m2!1sfr!2sca!4v1647890123456!5m2!1sfr!2sca" 
                                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
