@model BoutiqueEnLigne.Models.ProduitVendeur

@{
    ViewData["Title"] = "Ajouter un produit";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/vendeur.css" />
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card vendeur-form-card">
                <div class="card-header">
                    <h3 class="mb-0">Ajouter un nouveau produit</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AjouterProduit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="vendeur-form-group">
                            <label asp-for="Nom" class="form-label">Nom du produit</label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="vendeur-form-group">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="vendeur-form-group">
                                    <label asp-for="Prix" class="form-label">Prix</label>
                                    <div class="input-group">
                                        <input asp-for="Prix" class="form-control" type="number" step="0.01" />
                                        <span class="input-group-text">€</span>
                                    </div>
                                    <span asp-validation-for="Prix" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="vendeur-form-group">
                                    <label asp-for="QuantiteEnStock" class="form-label">Quantité en stock</label>
                                    <input asp-for="QuantiteEnStock" class="form-control" type="number" />
                                    <span asp-validation-for="QuantiteEnStock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="vendeur-form-group">
                            <label asp-for="ImageUrl" class="form-label">URL de l'image</label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Vous pouvez également télécharger une image plus tard.</small>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="vendeur-btn vendeur-btn-primary">
                                <i class="bi bi-save vendeur-icon"></i> Enregistrer
                            </button>
                            <a asp-action="Index" class="vendeur-btn vendeur-btn-secondary">
                                <i class="bi bi-arrow-left vendeur-icon"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 