@using System.Text.Json
@{
    Layout = "_Layout";
    ViewBag.Title = "Paiement";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Paiement sécurisé</h1>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Panier", "GestionDuCompte")" class="btn btn-outline-primary">
                        <i class="bi bi-cart me-2"></i>Retour au panier
                    </a>
                    <a href="@Url.Action("Index", "Accueil")" class="btn btn-outline-secondary">
                        <i class="bi bi-house me-2"></i>Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Formulaire de paiement -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Informations de paiement</h5>
                    
                    <!-- Mode de paiement -->
                    <div class="mb-4">
                        <label class="form-label">Mode de paiement</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="card" checked>
                                <label class="form-check-label" for="card">
                                    <i class="bi bi-credit-card me-2"></i>Carte bancaire
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="paypal">
                                <label class="form-check-label" for="paypal">
                                    <i class="bi bi-paypal me-2"></i>PayPal
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Informations de la carte -->
                    <div id="cardInfo">
                        <div class="mb-3">
                            <label class="form-label">Numéro de carte</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="1234 5678 9012 3456">
                                <span class="input-group-text">
                                    <i class="bi bi-credit-card"></i>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date d'expiration</label>
                                <input type="text" class="form-control" placeholder="MM/AA">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">CVV</label>
                                <input type="text" class="form-control" placeholder="123">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nom sur la carte</label>
                            <input type="text" class="form-control" placeholder="John Doe">
                        </div>
                    </div>

                    <!-- Adresse de facturation -->
                    <div class="mb-4">
                        <h6 class="mb-3">Adresse de facturation</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Prénom</label>
                                <input type="text" class="form-control" value="@User.Identity.Name">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nom</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Adresse</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Code postal</label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ville</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                    </div>

                    <!-- Conditions -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="conditions" required>
                        <label class="form-check-label" for="conditions">
                            J'accepte les <a href="#" class="text-decoration-none">conditions générales</a> et la <a href="#" class="text-decoration-none">politique de confidentialité</a>
                        </label>
                    </div>

                    <form action="@Url.Action("Validation", "Paiement")" method="post">
                        <button type="submit" class="btn btn-primary w-100" id="submitButton" disabled>
                            <i class="bi bi-shield-check me-2"></i>Valider le paiement
                        </button>
                    </form>
                </div>
            </div>

            <!-- Sécurité -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shield-check text-primary me-2"></i>
                        <span>Paiement sécurisé avec cryptage SSL</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Résumé de la commande -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Résumé de la commande</h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total</span>
                        <span>@ViewBag.Total.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison</span>
                        <span>Gratuit</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>TVA (20%)</span>
                        <span>@((ViewBag.Total * 0.2m).ToString("C"))</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong class="text-primary">@((ViewBag.Total * 1.2m).ToString("C"))</strong>
                    </div>

                    <!-- Produits -->
                    <div class="mb-4">
                        <h6 class="mb-3">Produits</h6>
                        <div class="row g-3">
                            @foreach (var item in ViewBag.Items)
                            {
                                <div class="col-12">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <img src="@item["Image"]" alt="@item["Nom"]" class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="text-muted">
                                                            <small>Quantité: @item["Quantite"]</small>
                                                        </div>
                                                        <div class="text-primary fw-bold">
                                                            @item["Prix"].ToString("C")
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const conditionsCheckbox = document.getElementById('conditions');
            const submitButton = document.getElementById('submitButton');

            conditionsCheckbox.addEventListener('change', function() {
                submitButton.disabled = !this.checked;
            });
        });
    </script>
}
