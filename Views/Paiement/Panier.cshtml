@{
    Layout = "_Layout";
    ViewBag.Title = "Mon panier";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Mon panier</h1>
                <a asp-controller="GestionDuCompte" asp-action="Infospersonnelles" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à mon profil
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Liste des produits -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <!-- Produit 1 -->
                    <div class="d-flex align-items-center mb-4 pb-4 border-bottom">
                        <img src="~/images/produit1.jpg" alt="Produit 1" class="rounded" style="width: 100px; height: 100px; object-fit: cover;">
                        <div class="flex-grow-1 ms-4">
                            <h5 class="mb-1">Nom du produit 1</h5>
                            <p class="text-muted mb-2">Référence: #12345</p>
                            <div class="d-flex align-items-center">
                                <div class="input-group" style="width: 120px;">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="1">
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <span class="ms-3 text-primary fw-bold">49.99 €</span>
                            </div>
                        </div>
                        <button class="btn btn-link text-danger p-0 ms-3">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                    <!-- Produit 2 -->
                    <div class="d-flex align-items-center mb-4 pb-4 border-bottom">
                        <img src="~/images/produit2.jpg" alt="Produit 2" class="rounded" style="width: 100px; height: 100px; object-fit: cover;">
                        <div class="flex-grow-1 ms-4">
                            <h5 class="mb-1">Nom du produit 2</h5>
                            <p class="text-muted mb-2">Référence: #12346</p>
                            <div class="d-flex align-items-center">
                                <div class="input-group" style="width: 120px;">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="2">
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <span class="ms-3 text-primary fw-bold">79.99 €</span>
                            </div>
                        </div>
                        <button class="btn btn-link text-danger p-0 ms-3">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                    <!-- Produit 3 -->
                    <div class="d-flex align-items-center">
                        <img src="~/images/produit3.jpg" alt="Produit 3" class="rounded" style="width: 100px; height: 100px; object-fit: cover;">
                        <div class="flex-grow-1 ms-4">
                            <h5 class="mb-1">Nom du produit 3</h5>
                            <p class="text-muted mb-2">Référence: #12347</p>
                            <div class="d-flex align-items-center">
                                <div class="input-group" style="width: 120px;">
                                    <button class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control text-center" value="1">
                                    <button class="btn btn-outline-secondary" type="button">+</button>
                                </div>
                                <span class="ms-3 text-primary fw-bold">29.99 €</span>
                            </div>
                        </div>
                        <button class="btn btn-link text-danger p-0 ms-3">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Code promo -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Code promo</h5>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Entrez votre code promo">
                        <button class="btn btn-primary">Appliquer</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Résumé de la commande -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Résumé de la commande</h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total</span>
                        <span>159.97 €</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison</span>
                        <span>Gratuit</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Taxes</span>
                        <span>31.99 €</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong class="text-primary">191.96 €</strong>
                    </div>

                    <a asp-controller="Paiement" asp-action="Paiement" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-lock me-2"></i>Procéder au paiement
                    </a>

                    <div class="text-center">
                        <p class="text-muted small mb-0">
                            <i class="bi bi-shield-check me-1"></i>
                            Paiement sécurisé
                        </p>
                    </div>
                </div>
            </div>

            <!-- Garanties -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-truck text-primary me-2"></i>
                        <span>Livraison gratuite</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-arrow-repeat text-primary me-2"></i>
                        <span>Retours gratuits</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shield-check text-primary me-2"></i>
                        <span>Paiement sécurisé</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
