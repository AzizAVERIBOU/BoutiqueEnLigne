                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-download me-1"></i>Télécharger
                                        </a>
                                    </td>
                                </tr>
                                <!-- Facture 3 -->
                                <tr>
                                    <td>05/03/2024</td>
                                    <td>#CMD-2024-003</td>
                                    <td>299.99 €</td>
