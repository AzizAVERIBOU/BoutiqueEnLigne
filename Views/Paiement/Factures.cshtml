                                    <td>191.96 €</td>
                                    <td>
                                        <span class="badge bg-success">Payée</span>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-download me-1"></i>Télécharger
                                        </a>
                                    </td>
                                </tr>
                                <!-- Facture 2 -->
                                <tr>
                                    <td>10/03/2024</td>
