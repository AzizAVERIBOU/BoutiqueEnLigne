@{
    Layout = "_Layout";
    ViewBag.Title = "Mes factures";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Mes factures</h1>
                <a asp-controller="GestionDuCompte" asp-action="Infospersonnelles" class="btn btn-outline-primary">
