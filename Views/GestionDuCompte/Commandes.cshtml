@{
    Layout = "_Layout";
    ViewBag.Title = "Mes commandes";
}

<div class="container py-5">
    <div class="row">
        <!-- Menu latéral -->
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <div class="text-center mb-3">
                        <div class="position-relative d-inline-block">
                            <img src="~/images/membre1.jpg" class="rounded-circle" alt="Photo de profil" style="width: 100px; height: 100px; object-fit: cover;">
                            <button class="btn btn-sm btn-light position-absolute bottom-0 end-0 rounded-circle p-2">
                                <i class="bi bi-camera"></i>
                            </button>
                        </div>
                        <h5 class="mt-3 mb-1">John Doe</h5>
                        <p class="text-muted small">john.doe@example.com</p>
                    </div>
                    <div class="list-group list-group-flush">
                        <a asp-controller="GestionDuCompte" asp-action="Infospersonnelles" class="list-group-item list-group-item-action">
                            <i class="bi bi-person me-2"></i>Informations personnelles
                        </a>
                        <a asp-controller="GestionDuCompte" asp-action="Commandes" class="list-group-item list-group-item-action active">
                            <i class="bi bi-bag me-2"></i>Mes commandes
                        </a>
                        <a asp-controller="GestionDuCompte" asp-action="Adresses" class="list-group-item list-group-item-action">
                            <i class="bi bi-geo-alt me-2"></i>Mes adresses
                        </a>
                        <a asp-controller="Paiement" asp-action="Panier" class="list-group-item list-group-item-action">
                            <i class="bi bi-cart me-2"></i>Mon panier
                        </a>
                        <a asp-controller="GestionDuCompte" asp-action="Securite" class="list-group-item list-group-item-action">
                            <i class="bi bi-shield-lock me-2"></i>Sécurité
                        </a>
                        <a asp-controller="GestionDuCompte" asp-action="Deconnexion" class="list-group-item list-group-item-action text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="col-md-9">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h2 class="h4 mb-4">Historique des commandes</h2>

                    <!-- Filtres -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Rechercher une commande...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <select class="form-select">
                                <option value="">Tous les statuts</option>
                                <option value="en_cours">En cours</option>
                                <option value="livree">Livrée</option>
                                <option value="annulee">Annulée</option>
                            </select>
                        </div>
                    </div>

                    <!-- Liste des commandes -->
                    <div class="list-group list-group-flush">
                        <!-- Commande 1 -->
                        <div class="list-group-item border-0 border-bottom">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h6 class="mb-0">Commande #12345</h6>
                                    <small class="text-muted">Date: 15 Mars 2024</small>
                                </div>
                                <span class="badge bg-success">Livrée</span>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Total:</strong> 149.99 €</p>
                                    <p class="mb-1"><strong>Mode de paiement:</strong> Carte bancaire</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Adresse de livraison:</strong></p>
                                    <p class="mb-0">123 Rue Example<br>75001 Paris, France</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Voir les détails
                                </button>
                            </div>
                        </div>

                        <!-- Commande 2 -->
                        <div class="list-group-item border-0 border-bottom">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h6 class="mb-0">Commande #12344</h6>
                                    <small class="text-muted">Date: 10 Mars 2024</small>
                                </div>
                                <span class="badge bg-warning">En cours</span>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Total:</strong> 89.99 €</p>
                                    <p class="mb-1"><strong>Mode de paiement:</strong> PayPal</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Adresse de livraison:</strong></p>
                                    <p class="mb-0">123 Rue Example<br>75001 Paris, France</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Voir les détails
                                </button>
                            </div>
                        </div>

                        <!-- Commande 3 -->
                        <div class="list-group-item border-0">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h6 class="mb-0">Commande #12343</h6>
                                    <small class="text-muted">Date: 5 Mars 2024</small>
                                </div>
                                <span class="badge bg-danger">Annulée</span>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Total:</strong> 199.99 €</p>
                                    <p class="mb-1"><strong>Mode de paiement:</strong> Carte bancaire</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Adresse de livraison:</strong></p>
                                    <p class="mb-0">123 Rue Example<br>75001 Paris, France</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Voir les détails
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
