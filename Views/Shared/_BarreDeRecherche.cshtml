@model string

<div class="search-container">
    <form asp-controller="Produit" asp-action="Recherche" method="get" class="d-flex">
        <div class="input-group">
            <input type="text" 
                   name="recherche" 
                   class="form-control" 
                   placeholder="Rechercher un produit..."
                   value="@Model"
                   aria-label="Rechercher">
            <button class="btn btn-search hover-lift" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
</div>

<style>
    .search-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 1rem;
    }
    
    .input-group {
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius: 25px;
        overflow: hidden;
    }
    
    .form-control {
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }
    
    .form-control:focus {
        box-shadow: none;
    }
    
    .btn-primary {
        border: none;
        padding: 0.75rem 1.5rem;
        background-color: #007bff;
    }
    
    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
